<div class="container">
  <div class="row">
    <div class="col-md-3 offset-md-1">
      <h6>配送先編集</h6>
    </div>
  </div>
  
  <%= form_with model:@address, url: public_address_path(@address.id), local:true do |f| %>
  <div class="row">
    <div class="col-md-3">郵便番号（ハイフンなし）</div>
    <div class="col-md-3"><%= f.text_field :postal_code %></div>
  </div>
  
  <div class="row">
    <div class="col-md-3">住所</div>
    <div class="col-md-5"><%= f.text_field :address %></div>
  </div>
  
  <div class="row">
    <div class="col-md-3">宛名</div>
    <div class="col-md-3"><%= f.text_field :name %></div>
    <div class="col-md-2 offset-md-2"><%= f.submit '変更内容を保存', class: "btn btn-success" %></div>
  </div>
  <% end %>