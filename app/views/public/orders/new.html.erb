<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h1>注文情報入力</h1>
      
      <%= form_with(model: @order, local:true, url: public_orders_confirm_path, method: :post) do |f| %>
      <div class="field row" style="margin-left:20px; ">
        
        <div class="col-sm-12">
        <h4>支払い方法</h4>
        <label style="margin-left: 60px;"><%= f.radio_button :payment_method, 0,checked: "checked" %>クレジットカード</label>
        <label style="margin-left: 60px;"><%= f.radio_button :payment_method, 1 %>銀行振込</label>
        </div>
        
        <div class="col-sm-12">
        <h4>お届け先</h4>
        <label style="margin-left: 60px;"><%= f.radio_button :address_number, 1,checked: "checked" %>ご自身の住所</label>
        <div style="margin-left:70px;"><%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.last_name %><%= current_customer.first_name %></div>
        </div>
        
        <div class="col-sm-12">
          <label style="margin-left: 60px;"><%= f.radio_button :address_number, 2 %>登録済み住所から選択</label>
          <div style="margin-left:80px; padding:0 100px;"><%= f.collection_select(:address, current_customer.addresses, :id, :address )%></div>
          <!--<div style="margin-left:80px; padding:0 100px;"><%#= f.collection_select(:address, current_customer.addresses, :id, :address_all )%></div>-->
        </div>
        
        <div class="col-sm-12">
        <label style="margin-left: 60px;"><%= f.radio_button :address_number, 3 %> 新しいお届け先</label>
        <div style="display: flex; margin-left:15% ;">
          <div  style="display: flex flex-direction: column;  flex-wrap: wrap;  width: 60px;">
            <%= f.label :"郵便番号"%><br><br>
            <%= f.label :"住    所"%><br><br>
            <%= f.label :"宛    名"%><br><br>
          </div>
          <div style=" margin-left:20px; ">
            <%= f.text_field :postal_code  %><br><br>
            <%= f.text_field :address ,size: "60" %><br><br>
            <%= f.text_field :name %><br><br>
           <%= f.submit "確認画面に進む", class: "btn btn-primary text-cenrer" %>
          </div>
        </div>  
        
      </div>
    </div>
  </div>
</div>
<% end %>