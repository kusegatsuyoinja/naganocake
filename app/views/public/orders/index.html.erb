<div class="container">
  <div class="row">
    <div class="col-md-3 ">
      <h6>注文履歴一覧</h6>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
    <table class="table table-bordered">
      <thead class="thead-light">
        <tr>
          <th colspan="2">注文日</th>
          <th colspan="4">配送先</th>
          <th colspan="2">注文商品</th>
          <th colspan="1">支払い金額</th>
          <th colspan="1">ステータス</th>
          <th colspan="2">注文詳細</th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |o| %>
        <tr>
          <td colspan="2"><%= o.created_at %></td>
          <td colspan="4">
            <%= o.delivery_postal_code %><br>
            <%= o.delivery_address %><br>
            <%= o.delivery_name %>
          </td>
          <!--　注文商品表示（アソシエーション）-->
          <td colspan="2">
            <% o.order_details.each do |od| %>
              <P><%= od.item.name %></P>
            <% end %>
          </td>
          <td colspan="1"><%= (o.bill).floor(-1) %></td>
          <td colspan="1"><%= o.order_status %></td>
          <td colspan="2">
            <%= link_to '表示する',  public_order_path(o.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

</div>
