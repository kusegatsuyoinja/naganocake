<main>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
       <h4>商品詳細</h4>
      <div class = "col-md-3">
        <%= attachment_image_tag @item, :image, size: "250x150", fallback: "no_image.jpg"%>
      </div>
      <div class = "col-md-5">
        <table>
          <thead>
            <tr>
              <th>商品名</th>
              <th><%= @item.name %></th>
            </tr>
            <tr>
              <th>商品説明</th>
              <th><%= @item.description %></th>
            </tr>
            <tr>
              <th>ジャンル</th>
              <th><%= @genre.name %></th>
            </tr>
            <tr>
              <th>税込価格</br>（税抜価格）</th>
              <th><%= @item.price*1.1 %>(<%= @item.price %>)円</th>
            </tr>
            <tr>
              <th>販売ステータス</th>
              <th>
                <% if @item.is_active == true %>
                  <div style = "color: #7ab977;">
                    販売中
                  </div>
                <% else %>
                  <div style = "color: #9ba5a0;">
                    販売停止中
                  </div>
                <% end %>
              </th>
            </tr>
          </thead>
        </table>
        <%= link_to '編集する',edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</main>