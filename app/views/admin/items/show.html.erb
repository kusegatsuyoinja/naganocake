<main>
  <h2>商品詳細</h2>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "col-md-3">
        <%= attachment_image_tag @item, :image_id, size: "40x40", fallback: "no_image.jpg"%>
      </div>
      <div class = "col-md-8 offset-md-1">
         <table　class = "table table-hover table-inverse">
          <thead>
            <tr>
              <th>商品名</th>
              <th>商品説明</th>
              <th>ジャンル</th>
              <th>税込価格</br>
                (税抜価格)
              </th>
              <th>ステータス</th>
            </tr>
          </thead>
          <tbody>
            <% @item.each do |item| %>
              <tr>
                <td><%= item.name%></td>
                <td><%= item.description %></td>
                <td><%= item.genre %></td>
                <td><%= @order_details.price %><%= (item.price) %> </td>
                <td><%= item.is_active %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to '編集する',edit_admin_item_path(@item.id), class: "btn btn-success" %>
      </div>
    </div>
  </div>
</main>