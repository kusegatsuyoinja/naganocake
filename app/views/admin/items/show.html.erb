<main>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
       <h4>商品詳細</h4>
    </div>
    <div class = "row" style = "padding-top: 100px;">
      <div class = "col-md-3 offset-md-1">
        <%= attachment_image_tag @item, :image, size: "250x150", fallback: "no_image.jpg"%>
      </div>
      <div class = "col-md-5 offset-md-1">
        <table>
          <tbody>
            <tr>
              <td style = "padding-bottom: 5px;">商品名</td>
              <td style = "padding-bottom: 0;">
                <%= @item.name %>
              </td>
            </tr>
            <tr>
              <td  nowrap style = "padding-bottom: 30px;">商品説明</td>
              <td style = "padding: 30px 0 40px 0;">
                <%= @item.description %>
              </td>
            </tr>
            <tr>
              <td  style = "padding-bottom: 15px;">ジャンル</td>
              <td  style = "padding-bottom: 15px;">
                <%= @item.genre.name %>
              </td>
            </tr>
            <tr>
              <td  nowrap style = "padding-bottom: 15px;">税込価格</br>（税抜価格）</td>
              <td style = "padding-bottom: 15px;">
                <%= @item.price*1.1 %>(<%= @item.price %>)円
              </td>
            </tr>
            <tr>
              <td  nowrap style = "padding-bottom: 15px;">販売ステータス</td>
              <td style = "padding-bottom: 15px;">
                <% if @item.is_active == true %>
                  <div style = "color: #339900;">
                    販売中
                  </div>
                <% else %>
                  <div style = "color: #9ba5a0;">
                    販売停止中
                  </div>
                <% end %>
              </td>
            </tr>
          </tbody>
        </table>
        <div style = "padding-left: 100px;">
          <%= link_to '編集する',edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </div>
      </div>
      </div>
    </div>
  </div>
</main>