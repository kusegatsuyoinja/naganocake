<main>
  <div class = "container px-5 px-sm-0">
    <div class = "row">
      <div class = "offset-md-1 col-md-8">
      <h4>商品一覧</h4>
      <%= link_to new_admin_item_path do %>
      <% end %>



      <table　class = "table table-hover table-inverse">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        <% @item.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= item.name %></td>
              <td><%= item.price %></td>
              <td><%= item.genre %></td>
              <td><%= item.is_active %></td>
            </tr>
         <% end %>
      </table>
      </div>
    </div>
  </div>
</main>