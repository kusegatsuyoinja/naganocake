<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h5>会員情報編集</h5>
    
      <%= form_for(@customer, url: admin_customer_path(@customer)) do |f| %>
    
      <table class="table table-borderless">
        <tr>
          <th class="col-xs-2"><%= f.label :会員ID %></th>
          <td class="col-xs-10"><%= f.text_field :id  , class:"form-control"%></td>
        </tr>
    
        <tr>
          <th><%= f.label :氏名 %></th>
          <td><%= f.text_field :last_name, class:"form-control" %><br>
              <%= f.text_field :first_name, class:"form-control" %>
          </td>
        </tr>
    
        <tr>
          <th><%= f.label :フリガナ %></th>
          <td><%= f.text_field :last_ruby, class:"form-control" %><br>
              <%= f.text_field :first_ruby, class:"form-control" %>
          </td>
        </tr>
    
        <tr>
          <th><%= f.label :郵便番号 %></th>
          <td><%= f.text_field :postal_code, class:"form-control" %></td>
        </tr>
    
        <tr>
          <th><%= f.label :住所 %></th>
          <td><%= f.text_field :address, class:"form-control" %></td>
        </tr>
    
        <tr>
          <th><%= f.label :電話番号 %></th>
          <td><%= f.text_field :phone_number, class:"form-control" %></td>
        </tr>
    
        <tr>
          <th><%= f.label :メールアドレス %></th>
          <td><%= f.text_field :email , class:"form-control"%></td>
        </tr>
    
        <tr>
          <th><%= f.label :会員ステータス %></th>
          <td><%= f.select :is_deleted, [["有効会員","false"], ["退会済み","true"]], class:"form-control" %></td>
        </tr>
      </table>
    
    
          <div class="row text-right">
            <%= f.submit "変更を保存" ,class: "btn btn-secondary " %>
          </div>
      <% end %>
    </div>
  </div>
</div>

<%#= f.radio_button :is_deleted, :true %>
<%#= f.label :is_deleted, "退会", {value: :true, style: "display: inline-block;"} %>
<%#= f.radio_button :is_deleted, :false %>
<%#= f.label :is_deleted, "有効", {value: :false, style: "display: inline-block;"} %>