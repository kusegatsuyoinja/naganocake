<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h5>会員一覧</h5>
      <table class='table'>
        <thead class="table-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.last_name + customer.first_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td>
                <% if customer.is_deleted == true %>
                  <div style="color:#696969">退会</div>
                <% else %>
                  <div style="color:#c71585">有効</div>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
