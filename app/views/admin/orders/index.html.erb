<div class="container">
  <div class="row">
    <div class="col-md-3 ">
      <h6>注文履歴一覧</h6>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th colspan="3">購入日時</th>
          <th colspan="2">購入者</th>
          <th colspan="2">注文個数</th>
          <th colspan="3">注文ステータス</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |o| %>
        <tr>
          <td colspan="2"><%= o.created_at %></td>
          <td colspan="4">
            <%= o.customer. %>
          </td>
          <!--　注文商品表示（アソシエーション）-->
          <td colspan="2"><%= o.order_details.product_id.name %></td> 
          <td colspan="1"><%= o.bill %></td>
          <td colspan="1"><%= o.order_status %></td>
          <td colspan="2">
            <%= link_to '表示する',  public_order_path(o.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

</div>
