<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h6>注文履歴一覧</h6>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-10">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th colspan="3">購入日時</th>
          <th colspan="2">購入者</th>
          <th colspan="2">注文個数</th>
          <th colspan="3">注文ステータス</th>
        </tr>
      </thead>
      
      <tbody>
        <% @orders.each do |o| %>
        <tr>
          <td colspan="3"><%= link_to o.created_at, admin_order_path(o.id) %></td>
          <td colspan="2">
            <!--　購入者表示　-->
            <%= o.customer. %>
          </td>
          <td colspan="2"><%= o.order_details.quantity %></td> 
          <td colspan="3"><%= o.order_status %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

</div>
