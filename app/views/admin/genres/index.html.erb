<div class="container">
  <div class="row">
    <div class="col-md-3">
      <h3>ジャンル一覧・追加</h3>
    </div>
  </div>
  
  <div class="row">
    <%= form_with model:@genre, local:true do |f| %>
      <div class="col">ジャンル名</div>
      <div class="col"><%= f.text_field :name %></div>
      <div class="col"><%= f.submit '新規登録', class: "btn btn-success" %></div>
    <% end %>
  </div>
  
  <div class="row">
    <div class="col">
      <table class>
        <thead>
          <tr>
            <th>ジャンル</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @genres.each do |g| %>
          <tr>
            <td><%= g.name %></td>
            <td><%= link_to '編集する', edit_admin_genre(g.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  
</div>