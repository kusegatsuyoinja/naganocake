<div class="container">
  <div class="row">
    <div class="col">
      <h6>ジャンル編集</h6>
    </div>
  </div>
  
  <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
  <div class="row">
    <div class="col-2">ジャンル名</div>
    <div class="col-3"><%= f.text_field :name %></div>
    <div class="col-2"><%= f.submit '変更を保存', class: "btn btn-success" %></div>
  </div>
  <% end %>