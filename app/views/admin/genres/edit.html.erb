<div class="container">
  <div class="row">
    <div class="col-md-4 offset-md-1">
      <h6>ジャンル編集</h6>
    </div>
  </div>
  
  <%= form_with model:@genre, url: admin_genre_path(@genre.id), local:true do |f| %>
  <div class="row">
    <div class="col-md-2">ジャンル名</div>
    <div class="col-md-3"><%= f.text_field :name %></div>
    <div class="col-md-2"><%= f.submit '変更を保存', class: "btn btn-outline-secondary" %></div>
  </div>
  <% end %>